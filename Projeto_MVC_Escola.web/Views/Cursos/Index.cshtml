@model IEnumerable<Projeto_MVC_Escola.web.Data.Entities.Curso>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<br />
<p class="mt-5" align="center">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table" align="center" style="width:85%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome_curso)
            </th>Curso
            <th>
                @Html.DisplayNameFor(model => model.carga_horaria_curso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.data_inicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.data_fim)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nome_curso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.carga_horaria_curso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.data_inicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.data_fim)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
